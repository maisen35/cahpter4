<div class='container'>
<div class='row'>
<div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
<h2>User info</h2>
<% if @user.errors.any? %>
  <%= @user.errors.count %>error!
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>


<%= form_with model: @user, local:true do |f| %>
<div class="form-group">
  <label for="user_name">Name</label>
  <div><%= f.text_field :name, autofocus: true, id:"user_name" %></div>
</div>
<div class="form-group">
  <label for="user_image">Image</label>
  <div><%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*", id:"user_image" %></div>
</div>
<div class="form-group">
  <label for="user_introduction">Introduction</label>
  <div><%= f.text_area :introduction, autofocus: true, id:"user_introduction" %></div>
</div>

  <%= f.submit "Update User", class: "btn btn-secondary" %>
<% end %>
</div>
</div>
</div>